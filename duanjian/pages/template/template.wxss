/* pages/template/template.wxss */
page{
   height: auto;
}


.foot {
   font-size: 28rpx;
   text-align: center;
   display: block;
   margin-top: 20rpx;
   color: #666;
   padding-bottom: 50rpx;
}

.image{
   text-align: center;
   border-bottom:1rpx solid grey;
}
.title{
   padding-top:50rpx; 
}
.title text{
   display: block;
   margin-top:20rpx; 
}
.image image{
   width: 135rpx;
   height: 150rpx;
   margin: 50rpx;
}
.template{
   background: #f5f5f5;
   padding-top: 20rpx;
}
/*导航栏  */
.nav-menu {
   border-bottom: 1rpx solid #e6e6e6;
   width: 100%;
   display: flex;
   background: white;
   position: relative;
}

.nav-menu view {
   flex: auto;
   overflow: hidden;
   text-align: center;
   line-height: 84rpx;
   font-size: 32rpx;
   color: #828385;
}

.nav-menu view:nth-child(2n) {
   border-left: 1rpx solid #e6e6e6;
   border-right: 1rpx solid #e6e6e6;
}

.head {
   width: 100%;
   position: fixed;
   height: 0px;
      z-index: 1000;
}
.back{
   z-index: 1000;
      height: 100%;
}
.nav-content {
   position: absolute;
   background: rgba(0, 0, 0, 0.2);
   width: 100%;
   height: 100%;
}

.show {
   display: flex;
   width: 100%;
}

.show view {
   width: 50%;
   overflow: hidden;
   background: #f2f2f2;
}

.left, .right {
   width: 50%;
   float: left;
}

.cate .right {
   background: #f2f2f2;
}
.left text {
   display: block;
   text-align: center;
   background: white;
}

.right text {
   display: block;
   text-align: center;
}

.left text ,.right text,.order text {
   line-height: 88rpx;
   font-size: 32rpx;
   color: #4a4a4a;
   border-bottom: 1rpx solid #e6e6e6;
}


.nav-menu .active {
   color: #03a9f4;
}

.order text {
   display: block;
   background: white;
   padding-left: 20rpx;
}
.btn{
   width: 100%;
   height:1000rpx;
   float: left;
}