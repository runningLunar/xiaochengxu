<!-- 会员中心 -->
<view class="box">

  <view class="home {{showSide?'hide':'show'}}">
    <view class="sec01">
      <view class='top'>
        <text bindtap='move'>快捷操作</text>
        <text>会员中心</text>
      </view>
      <view class='per_info'>
        <view class='per_photo'>
          <image src='../../images/default.jpg'></image>
        </view>
        <view class='name'>
          <text>{{member.username}}</text>
          <text>（{{member.username}}）</text>
        </view>  
      </view>
    </view>
    <view class='sec02'>
      <view class='capital'>
        <view class='num color01'>{{member.money}}元</view>
        <view class='type'>我的资金</view>
      </view>
      
      <view class='integral'>
        <view class='num color02'>23点</view>
        <view class='type'>我的积分</view>
      </view>

      <view class='order'>
        <view class='num color03'>0</view>
        <view class='type'>我的订单</view>
      </view>
    </view>

    <view class='cate'>

      <view class='list-item' bindtap='toMessage_02'>
        <image src='../../images/index_01.png'></image>
        <view class='item-name'>
          <text class='category_name'>站内信件</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>

      <view class='list-item' bindtap='toChat_02'>
        <image src='../../images/index_02.png'></image>
        <view class='item-name'>
          <text class='category_name'>站内交谈</text>
        </view>
        <image src='../../images/next.png' ></image>
      </view>

      <view class='list-item'>
        <image src='../../images/index_03.png'></image>
        <view class='item-name'>
          <text class='category_name'>购物车</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>

      <view class='list-item space' bindtap='toAccount_02'>
        <image src='../../images/account_04.png'></image>
        <view class='item-name'>
          <text class='category_name'>我的账号</text>
          <text class='pro blue radius'>资料-认证-充值</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>
    
      <view class='list-item' bindtap='toInfoManage_02'>
        <image src='../../images/account_05.png'></image>
        <view class='item-name'>
          <text class='category_name'>信息管理</text>
          <text class='pro blue radius'>发布-修改信息</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>
    
      <view class='list-item' bindtap='toBusiness_02'>
        <image src='../../images/index_06.png'></image>
        <view class='item-name'>
          <text class='category_name'>交易管理</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>

      <view class='list-item space' bindtap='toSet_02'>
        <image src='../../images/account_07.png'></image>
        <view class='item-name'>
          <text class='category_name'>系统设置</text>
          <text class='pro blue radius'>设置</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>
    
      <view class='list-item' bindtap='toData_02'>
        <image src='../../images/account_08.png'></image>
        <view class='item-name'>
          <text class='category_name'>我的数据</text>
          <text class='pro red radius'>new</text>
        </view>
        <image src='../../images/next.png'></image>
      </view>

    
    </view>

     <view class='sec06' bindtap='loginOut'>
      <text class='button'>退出登录</text>
    </view> 

  </view>

  
  
  
  
  
  <view class='side-menu'>
    <view class='top02'>
      <image src="../../images/default.jpg" class='head-picture'></image>
      <text class='name02'>{{member.username}}</text>
    </view>
    <view>
      <view class='title'>快捷菜单</view>
      <view class='list'>锻件供应添加</view>
      <view class='list'>锻件采购添加</view>
      <view class='list'>锻件展会添加</view>
      <view class='list'>锻件资讯添加</view>
      <view class='list'>锻件知识添加</view>
    </view>
    <view>
      <view class='title'>其他项目</view>
      <view class='list'>首页</view>
      <view class='list'>频道</view>
      <view class='list'  bindtap='loginOut'>退出后台</view>
    </view>
  </view>

</view>






