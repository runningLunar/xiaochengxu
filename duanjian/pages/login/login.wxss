.nav .navCont{
  line-height:80rpx;
  display: flex;
}
.nav .navCont text{
  flex:auto;
  text-align: center;
  align-self: center;
  font-size: 32rpx;

}
.nav .bar{
  width: calc(100%/2);
  height:4rpx;
  background: #03a9f4;
  transition:all 1s;
}
.zhlogin .formBox{
  background: #fff;
  padding-bottom: 40rpx;
}
.zhlogin .box{
  width: 100%;
  display: flex;
}
.zhlogin .box input{
  flex: 90;
  width: 100%;
  border-bottom: 1px solid #dddddd;
  height: 100rpx;
  float: right;
  padding-top: 10rpx;

}
.zhlogin .box image{
  flex: 7;
  width:20rpx;
  height: 40rpx;
  margin-left: 15rpx;
  margin-top: 40rpx;
  margin-right: 10px;
  display: inline-block;  

}
.psection{
  font-size: 16px;
  color: #a9a9a9;
}
.zhlogin button{
  margin-top:50rpx; 
  width: 90%;
  background: #03a9f4;
  color: #fff;
}
.zhlogin .bottom{
  background: #f5f5f5;
  width: 100%;
  height: 800rpx;
  padding-top: 30rpx;
  border-radius: 2rpx;
  
}
.zhlogin .bottom .two{
  height: 100rpx;
  width: 100%;
  display: flex;

}
.zhlogin .bottom .two text{
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  background: #FFF;
  
}
.sjlogin .formBox .box button{
  display: block;
  width: auto;
  height: 70rpx;
  position: absolute;
  right: 45rpx;
  top:88rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  text-align: center;
}
.tips{
width: auto;
height: 60rpx;
border: 1px solid #ccc;
background: black;
position: absolute;
opacity: 0.6;
top:480rpx;
left:200rpx;
border-radius:20rpx; 
text-align: center;
line-height: 60rpx;
padding: 0 50rpx;
  
}
.tips text{
font-size: 28rpx;
color: #FFF;
text-align: center;
opacity: 1;

}
.otherlogin{
  width: 100%;
  height: auto;
  background: #FFF;
  margin-top:20rpx;
  text-align: center;
  font-size: 24rpx;
  color: grey;
  padding:40rpx 0rpx;  
}
.otherlogin .img image{
  width: 50rpx;
  height: 50rpx;
  margin: 50rpx 0 0 20rpx ;
}