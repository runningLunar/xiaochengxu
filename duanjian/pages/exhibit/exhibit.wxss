/* pages/zixun/zixun.wxss */
@import "../template/template.wxss";
page{
  background: #f6f6f6;
}

/* //搜索框 */
.search{
  width: 95%;
  margin:20rpx auto;
  display: flex;
  background: white;
  border-radius: 10rpx;
  height: 72rpx;
}
.sea{
  padding-top: 90rpx;
}
.search .img{
  width: 15%;
  height: 100%;
  text-align: center;
}
.search quxiao{

}
.search image{
  width: 40rpx;
  height:40rpx; 
  margin-top:15rpx; 
}
.search input{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}
.search .quxiao{
width: 70% !important;
}
.delete{
   font-size: 30rpx;
   padding:18rpx; 
}

.none{
   font-size: 28rpx;
   padding: 20rpx;
      border-top:solid 1rpx #dddddd; 
}
/*详细内容  */
.contentt {
  background: white;
    border-top:solid 1rpx #dddddd; 
}
.contentt .xianxi{
  display: flex;
  border-bottom:solid 1rpx #dddddd; 
}
.contentt .xianxi .left{
  width: 30%;
}
.contentt .xianxi .left image{
  width: 165rpx;
  height:200rpx; 
  margin-left:30rpx; 
}
.contentt .xianxi .rightt{
  width: 70%;
  flex-direction: row;
  margin-left: 20rpx;
}

.contentt .xianxi .rightt .company{
  font-size: 30rpx;
    color: #757575;
}
.contentt .xianxi .rightt .name{
  font-size:32rpx;
  margin-top: 25rpx;
  margin-left: 10rpx;

}
.contentt .xianxi .rightt .keyword{
  font-size:25rpx;
  margin-top: 15rpx;
  margin-left: 10rpx;
color: #757575;
}
.contentt .xianxi .rightt .time-add{
   display: flex;
   margin: 20rpx 0rpx;
}
.contentt .xianxi .rightt .address,.contentt .xianxi .rightt .time{
     font-size:25rpx;
  margin-left: 10rpx;
color: #757575;
border: none;
flex: auto;
   text-align:center;
      padding: 5rpx;
}
.contentt .xianxi .rightt .address{
     border: solid 1rpx ;
border-radius: 10rpx;
color: #ffc107;
border-color: #ffc107;
margin-left:10rpx; 
}
.contentt .xianxi .rightt .cate{
       font-size:25rpx;
  margin-left: 10rpx;
flex: auto;
   text-align:center;
   border: solid 1rpx gray;
   padding: 5rpx;
   color: #03a9f4;
border-color: #03a9f4;
border-radius: 10rpx;
}
.page{
  width: 85%;
  margin: 0rpx auto;
  
}
.page text{
  display: inline-block;
  width: 20%;
  text-align: center;
  font-size: 32rpx;
  z-index: 10000;
}

.action{
 background: #f2f2f2 !important;
}