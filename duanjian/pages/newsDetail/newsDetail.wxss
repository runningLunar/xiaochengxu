/* newsDetail.wxss */
.clean{
  clear: both;
}
.header{
  padding-top: 1.3rem;
  padding-left: 1rem;
  padding-bottom: 1rem;
}
.header .title{
  font-size: 1.1rem;
  font-weight: bold;
  margin-bottom: 0.7rem;
}
.header .msg{
  font-size: 0.65rem;
  color: grey;
}
icon{
  margin-left: 0.8rem;
  margin-right: 0.4rem;
}
.depart-line{
  width: 100%;
  background-color: #eee;
}
.content{
  font-size: 0.8rem;
  line-height: 1.4rem;
  padding: 1rem;
  text-indent: 1.5rem;
}
.share{
  font-size: 0.7rem;
  padding: 0.7rem;
}
.left{
  float: left;
}
.right{
  float: right;
  font-size: 0.7rem;
  margin-top: 0.4rem;
  margin-right: 0.7rem;
}
.share-btn{
  padding: 1rem;
}
.share-btn icon{
  font-size: 2rem;
}
.other{
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 2rem;
}
.other .title{
  color: red;
}
.footer{
  padding: 0.5rem;
  position: fixed;
  width: 100%;
  height: 1.5rem;
  background-color: #fff;
  bottom: 0;
  border: 1px solid #ddd;
  display: flex;
}
.footer .comment{
  background-color: #ddd;
  width: 7rem;
  margin-left: 2rem;
  border-radius: 1rem;
  font-size: 0.8rem;
  padding-left: 1rem;
}
.to-top{
  position: fixed;
  right: 1rem;
  bottom: 3.6rem;
  width: 2rem;
  height: 2rem;
  line-height: 2rem;
  font-size: 1rem;
  background-color: #eee;
  text-align: center;
  border-radius: 50%;
}