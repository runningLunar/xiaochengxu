@import "../wxParse/wxParse.wxss";
.container1 {
  justify-content: space-between;
  box-sizing: border-box;
  color: #000000;
   overflow: hidden;
   width: 100%;
} 
.container1 .nav{
   padding: 30rpx 0rpx;
}
.container1 .nav text{
   margin-left: 20rpx;
}
.head{
   width: 100%;
   padding: 20rpx 0rpx;
   background: #f6f6f6;
   padding-left: 20rpx;

}
.head .title{
   margin-bottom:50rpx; 
   font-size: 36rpx;
}
.head .time{
   font-size: 24rpx;
}
.head .time image{
   height: 30rpx;
   width: 30rpx;
}

.container1 .bottom-list{
  margin-bottom: 100rpx;
}
.container1 .bottom-list .bl-t{
  padding: 32rpx 20rpx;
  color: #f30701;
  font-size: 32rpx;
}
.container1 .bottom-list .bl-c{
  font-size: 28rpx;
  padding: 20rpx;
  border-top: 2rpx solid #ccc;
}

.container1 .nav-bottom{
  width: 100%;
  height: 112rpx;
  display: flex;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}
.container1 .nav-bottom .sc{
  padding: 12rpx 36rpx 0 36rpx;
  font-size: 28rpx;
  flex: 1;
  border: 2rpx solid #ccc;
  border-left: none;
  border-bottom: none;
}
.container1 .nav-bottom .zxjt{
  flex: 2;
   padding: 28rpx 40rpx 0 40rpx;
   background: #03a9f4;
   color: #fff;
}
.container1 .nav-bottom image{
  margin-left: 28rpx;
  display:block;
  width:48rpx;
  height:48rpx;
  color: #03a9f4;
}

.container1 .gy .gyxx .gy-l{
  flex: 1;
  align-self: center;
}
.container1 .gy .gyxx .gy-l image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.container1 .gy .gyxx .gy-c{
  flex: 5;
   align-self: center;
}
.container1 .gy .gyxx .gy-r{
  flex: 1;
  align-self: center;
  color: #ccc;
}
/* 返回顶部 */

.return {
  position: fixed;
  right: 22rpx;
  bottom: 120rpx;
  z-index: 9999;
  width: 90rpx;
  height: 90rpx;
  background-color: #fff;
  border: 1rpx solid #d2d2d2;
  border-radius: 100%;
  overflow: hidden;
  opacity: 0.8;
}
.returnTop {
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}
.pinjia{
   padding: 30rpx;
   border-bottom:1rpx solid gray;

}
.lianxi{
   margin-top:20rpx; 
}
.lianxi .li{
   padding: 10rpx 30rpx;
   display: block;
}
.lianxi  .button{
   margin-top:50rpx; 
}
.lianxi  .button button{
   display: inline-block;
   width: 42%;
   background: #e51c23;
   margin-left:40rpx; 
   color: white;
}
.lianxi  .button button:first-child{
      background: #03a9f4;
      color: black;
}
.company{
   margin-top: 30rpx;
   border-top: 1rpx solid #d2d2d2;
   display: flex;
   padding:20rpx 0rpx 40rpx; 
      border-bottom: 1rpx solid #d2d2d2;
}
.company .left {
   text-align: center;
   width: 180rpx;
   height: 140rpx;
}
.company .right{
       display: flex;
       flex-direction: column;
       margin-left:50rpx; 
}
.company .left image{
   width: 120rpx;
   height: 120rpx;
   border-radius: 100%;
   position: relative;
   top:20rpx;
}
.com{
margin: 20rpx 0rpx;
}
.content{
   width: 90%;
   margin: 50rpx auto;
}
.wxParse-p{
   text-indent: 50rpx;
   color: #757575;
}

