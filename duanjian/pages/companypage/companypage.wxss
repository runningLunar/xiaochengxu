@import "../template/template.wxss";
.top{
  width: 100%;
  height: 150rpx;
  background-color: #0f69dc;
}
.top .t-title{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  color: #fff;
  align-items: center;
  padding-left: 20rpx;
}
.top .t-title .logo{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  background-color: #fff;
}
.top .t-title text{
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.top .t-title .company{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.top .t-title span{
font-size: 34rpx;
}


/*nav  */
.nav .nav-list{
  display: flex;
  flex-direction: row;
}
.nav .nav-list .n-l-item{
  width: 25%;
  height: 130rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}
.nav .nav-list .n-l-item image{
  width: 70rpx;
  height: 70rpx;
}
.nav .nav-list .n-l-item text{
  margin-top: 10rpx;
}
.nav .nav-img{
width: 100%;
height: 250rpx;
background-color: #ccc;
}

/*content  */
.content .c-list{
  margin-top: 40rpx;
}
.content .c-list .c-title{
  width: 100%;
  height: 150rpx;
display: flex;
flex-direction: column;
align-items: center;
}
.content .c-list .c-title text{
  color: #0f69dc;
  font-size: 42rpx;
  font-weight: bold;
}
.content .c-list .c-title span{
color: #666666;
font-size: 36rpx;
margin-top: 15rpx;
}
.content .c-list .c-con{
    display: flex;
  flex-wrap: wrap;
}
.content .c-list .c-item{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  margin-top: 20rpx;
}
.content .c-list .c-item image{
  width: 350rpx;
  height: 320rpx;
}
.content .c-list .c-item text{
  width: 350rpx;
font-size: 36rpx;
color: #818181;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
